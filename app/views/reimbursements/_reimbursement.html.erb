<li>
  <% if !reimbursement.new_record? %>
    <%= form_for reimbursement, method: "delete", html: { class: "form-inline" } do |f| %>
      <%= f.label :details, "#{reimbursement.member.name}: #{number_to_currency(reimbursement.amount)} for #{reimbursement.details}" %>
      <%= f.submit "Delete", class: "btn btn-danger" %>
    <% end %>
  <% end %>
</li>
