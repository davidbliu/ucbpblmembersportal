<style type = "text/css">

.post-div {
  max-height: 150px;
  margin-bottom:7px;
  overflow: hidden;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
</style>
<div class = "post-div well well-sm">
	<div style = "float: right; display:none">Creator: <%= post.created_by.name if post.created_by %></div>
	<div><%= link_to post.title, post %></div>
	<br>
	<div class = "post-content post-editing" id = '<%= post.id %>'>
		<%= raw post.content %>
	</div>
</div>