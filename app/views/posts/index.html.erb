<div class="row-fluid">
  <div class="col-md-3 col-sm-3" id = "left-sidebar"  >
    <div id = "left-col-wrapper">
  	<div id = "search-bar"><button id = "go-button" class = "btn btn-success" type = "button">Go</button><input id = "posts-search" type = "text" class = "form-control" placeholder = "Search Posts"/>
    </div>
    <br>
    <div style = "height:7px"></div>
    <div id = "other-option-container">
      <!-- <img id = "calendar-button" src = "/calendar.png" style = "width: 35%"></img> -->
      <!-- <img id = "compose-button" src = "/pencil.jpg" style = " width: 28%; margin-top: 5px;"></img> -->
      <button class = "form-control btn btn-danger" type = "button" id = "calendar-button" style = "width:33%;">Calendar</button>
      <button class = "form-control btn btn-danger" type = "button" id = "compose-button" style = "width: 33%;">Compose</button>
    </div>
    <div style = "height:15px"></div>
    <div id = "categories-container">
      <div class = "nav-label label label-primary category-label" id = "">All Posts (42)</div>
      <% PostCategory.all.each do |category| %>
      <div class = "nav-label label label-default category-label" id = "<%= category.id %>"><%= category.name %></div>
      <% end %>

    </div><!-- end of categories container -->
    <br>

  </div>
  <!-- end of left col wrapper -->
  </div>
  <!-- end of whole left col -->
  <div class="col-md-9 col-sm-9" id = "all-posts-container">
    <div id = 'calendar-container'>
      <%= render "calendar" %>
      </div>
    <%= render "posts", posts: @posts %>
    <%= paginate @posts %>
  </div>
</div>

