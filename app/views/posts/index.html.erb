<style type = "text/css">
body{
	padding-top: 75px;
}
.col {
	border: 1px solid #eee;
}
.nav-label.label {
	display:inline-block;

	padding: 7px;
}
.label {
  margin: 2px;
}
.label a{
	color: white;
}
.label:hover {
	cursor: pointer;
}
.post-div {
  max-height: 150px;
  margin-bottom:3px;
  overflow: hidden;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.post-div:hover {
	overflow: hidden;
	cursor: pointer;
}
.post-content.post-editing:hover{
	cursor:default;
}
#posts-search {
  /*display: inline;*/
  float: left;
  width: 75%;
}
#go-button {
  float: right;
  width: 20%;
 /* background-color: maroon;
  border: none;*/
}
#create-button {
  margin-top: 15px;
  /*display:none;*/
}
#compose-button:hover{
  cursor: pointer;
}
#search-bar {
  margin-bottom: 15px;
}
#calendar-container {
display: none;
margin-bottom: 25px;
}
#calendar-button:hover {
  cursor: pointer;
}
#left-col-wrapper {
  position: fixed;
  width: inherit;
  padding-right: 25px;
}
