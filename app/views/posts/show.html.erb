<script type = "text/javascript">
function dbclickActions(){
	$(".post-content").dblclick(function(){
		$(this).attr("data-mercury",'markdown');
		var r = confirm("Would you like to edit this post?");
		if(r) {
			var id = $(this).attr("id");
			window.location.href = "/editor/posts/" + id;
		}
	});
}
$(document).ready(function(){
	jQuery(parent).trigger('initialize:frame');
	dbclickActions();

});
jQuery(window).on('mercury:ready', function() {
  Mercury.saveUrl = '/posts/mercury';
});
</script>
