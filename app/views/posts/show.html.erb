<div class="row-fluid">
  <div class="col-md-3 col-sm-3" id = "left-sidebar">
  	<input type = "text" class = "form-control" placeholder = "Search Posts"/><br>
  	<div class = "label label-primary"><a href = "#">Popular Posts</a></div>
  	<div class = "label label-default">Event Announcements</div>
  	<div class = "label label-default">Event Recaps</div>
  	<div class = "label label-default">Administrative</div>
  	<div class = "label label-default">Recent Posts</div>
  </div>
  <div class="col-md-6 col-sm-6">
  	<div class = "post-div well well-sm">
  		<div><b>Create New Post Here</b></div>
  		<div class = "post-content" id = 'new-post' data-mercury = "full">
  			This is a sample post. double click here to create a new post
  		</div>
  	</div>

  	<% @posts.each do |post| %>
  	<div class = "post-div well well-sm">
  		<div style = "float: right;"><b>Creator: <%= post.created_by.name if post.created_by %></b></div>
  		<div><b><%= post.title %></b></div>
  		<% if post == @post %>
  		<div class = "post-content post-editing" id = '<%= post.id %>' data-mercury = "full">
  			<%= raw post.content %>
  		</div>
  		<% else %>
  		<div class = "post-content" id = '<%= post.id %>' >
  			<%= raw post.content %>
  		</div>
  		<% end %>

  	</div>
  	<% end %>
  </div>
