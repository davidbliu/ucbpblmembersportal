<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

<%= javascript_include_tag "events/calendar.js" %>
<%= javascript_include_tag "events/show_posts.js" %>
<style type = "text/css">
#calendar{
  /*display: none;*/
}
#calendar table {
  border-collapse: collapse;
  width: 100%;
}

#calendar td,
#calendar th {
  font-family: "Lucida Grande",arial,helvetica,sans-serif;
  font-size: 10px;
  padding: 6px;
  border: 1px solid #999;
}

#calendar th {
  background: #DDD;
  color: #666;
  text-align: center;
  width: 14.2857142857143%;
}

#calendar td {
  background: #FFF;
  color: #777;
  height: 80px;
  vertical-align: top;
  font-size: 16px;
}

#calendar .notmonth {
  color: #CCC;
}

#calendar #month {
  margin: 0;
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: center;
}

#calendar #month a, #calendar #month a:hover {
  text-decoration: none;
  padding: 0 10px;
  color: #999;
}

#calendar .today {
  background-color: #D7F2FF;
}

#calendar ul {
  margin: 0;
  margin-top: 5px;
  padding: 0;
  list-style: none;
}

#calendar li {
  margin: 0;
  padding: 0;
  font-size: 11px;
  text-align: center;
}
#calendar .post_div{
  font-size: 12px;
  font-weight: normal;
  font-family:georgia;
  color:black;
}
#calendar .post_div:hover{
  color:red;
}
.post_div:hover{
  cursor:pointer;
}
.post_hidden{
  display:none;
}
.post_comments_hidden{
  display:none;
}
.month_button:hover{
  cursor:pointer;
  color: white;
}
.calendar_post_container a{
  font-size: .7em;
  line-height: normal;
}
.event-row:hover{
  color: blue;
}
</style>
<div id='calendar'>
          <h2 id="month">
            <span class = "month_button" id = '<%= (@date.beginning_of_month-1).strftime("%Y-%m-%d") %>'>&lt;</span>
            <%=h @date.strftime("%B %Y") %>
            <span class = "month_button" id = '<%= (@date.end_of_month+1).strftime("%Y-%m-%d") %>'>&gt;</span>
          </h2>
        <%= calendar_for(@calendar_events, :year=>@date.year, :month=>@date.month) do |calendar| %>
        <%= calendar.head('mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun') %>
         <%= calendar.day(:day_method => :start_time) do |date, events| %>
          <%= date.day if date %>
          <ul style = "text-align:center">
            <div class = "calendar_post_container">
            <% for event in events %>
              <div  class = "event-row" id = '<%= event.id %>'><%= event.name %></div>
            <% end %>
            </div>
            <!-- end of calendar post container -->
          </ul>
          </ul>
         <% end %>
        <% end %>
</div>
<!-- end of calendar div -->