<style type = "text/css">
#navlist {
  padding: 10px;
}
#navlist a {
  color: black;
}
#navlist .logo a {
  color: white;
}
#navlist .logo {
  margin-right: 10px;
}
#navlist .active a:hover {
  background-color: maroon;
  color: white;
}
</style>
<header class="header">
  <nav  id = "top_nav" class = "navbar navbar-default navbar-fixed-top" role = "navigation">
    <ul id = "navlist" class="nav nav-pills">
      <li class="logo active"><%= link_to "[PBL][MP]", root_path%></li>
      <% if current_member %>
        <li><%= link_to "Tabling", tabling_slots_url %></li>
        <li><%= link_to "Events", events_url %></li>
        <li><%= link_to "Points", points_url %></li>
        <li><%= link_to "Reimbursements", reimbursements_url %></li>
        <li><a href = "/commitments/availability">Commitments</a></li>
      <% end %>
      <% if current_member %>
        <li class="pull-right"><%= link_to current_member.name, "#" %></li>
        <li class="pull-right"><%= link_to "Sign out", signout_path, method: :delete %></li>
      <% else %>
        <li class="pull-right"><%= link_to "Sign in", root_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
