function keepCurrentCommittees(data, committee){
	for(var i=0;i<data.length;i++){
		if(data[i]["committee"] != committee){
			data.splice(i,1);
			i--;
		}
	}
	return data;
}
function compare(a,b) {
  if (a["points"] < b["points"])
     return -1;
  if (a["points"] > b["points"])
    return 1;
  return 0;
}
